# Листинг 4.22, файл fileapp.kv
<Filechooser>:
    label: label
    # Ориентация
    orientation: 'vertical'
    # Создание списка файлов и списка иконок
    BoxLayout:
        # Создание списка в левой половине страницы
        FileChooserListView:
            canvas.before:
                Color:
                    rgb: .4, .5, .5
                Rectangle:
                    pos: self.pos
                    size: self.size
            on_selection: root.select(*args)
        # Создание иконок в правой половине страницы
        FileChooserIconView:
            canvas.before:
                Color:
                    rgb: .5, .4, .5
                Rectangle:
                    pos: self.pos
                    size: self.size
            on_selection: root.select(*args)
    # Добавление метки
    Label:
        id: label
        size_hint_y: .1
        canvas.before:
            Color:
                rgb: .5, .5, .4
            Rectangle:
                pos: self.pos
                size: self.size